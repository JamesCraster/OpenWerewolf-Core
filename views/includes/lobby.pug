div(id="lobbyContainer" style="display:none; width:100%; height:100%;")
    div(class="ui inverted menu")
        div(class="header item") OpenWerewolf
        a(class="item" href="https://www.github.com/JamesCraster/OpenWerewolf" target="_blank") Github
        a(class="item" href="https://discord.gg/AYmr9vc" target="_blank") Discord
        div(class="ui inverted right menu")
            div(class="item")
                button(class="ui inverted blue button") Login
            div(class="item")    
                button(class="ui inverted blue button") Register
    div(id="lobby")
        div(id="container" style="margin-bottom:60px")
            - var n = 0;
            - while(n < numberOfGames){
                +lobbyEntry(n, gameNames[n], players[n], gameInPlay[n], gameTypes[n])
                - n += 1;
            - }
