    div(class="header item") 
        p(id="mainGameName") Loading...
    a(class="item" href="/") Home
    a(class="item" href="https://discord.gg/AYmr9vc" target="_blank") Discord
    div(class="ui inverted right menu")
        div(class="item")
            button(id="viewLobby" class="ui inverted button") View lobby
        div(class="item")
            button(id="leaveGame" class="ui inverted purple button") Leave Game
        include loggedInRightMenu.pug

