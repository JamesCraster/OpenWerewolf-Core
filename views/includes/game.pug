div(id="canvasContainer" style="width:100%;height:100%;overflow-y:hidden;")  
    div(id="outer" style="width:30%;position:absolute;left:10px")
        p(id="gameClock" style="color:#cecece; font-family: 'IBM Sans Plex', sans-serif; font-size:20px; margin-bottom:auto; margin-top:25px; margin-left:5%; align-self:start") Time: 00:00
        div(id="inner" style="height:60%;background-color:#212121")
            ul(id="chatbox")
                // Form for entering messages
        form(id="msgForm" class="messageForm")
            input(id="msg" autocomplete="off" placeholder="Type Here" maxlength="150" autofocus)
            input(id="submit" type="submit" value="Submit" style="margin-bottom:70px;")

    div(id="leftBox" class="sideBox" style="width:10%;position:absolute; right:0px; top:40px;")
        div(id="innerLeftBox" class="innerSideBox" style="overflow-y:hidden;width:90%; margin-right:auto; margin-left:0px;")
            ul(id="roleNames")
                //li(class="gameli") Time: 00:00
                li(class="gameli") Roles:

    div(id="rightBox" class="sideBox" style="width:10%; position:absolute; right:10%; top:40px;")
        div(id="innerRightBox" class="innerSideBox")
            ul(id="playerNames")
                li(class="gameli") Players: